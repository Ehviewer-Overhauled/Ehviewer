<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <rikka.material.preference.MaterialSwitchPreference
        android:defaultValue="false"
        android:key="require_unlock"
        android:title="@string/settings_privacy_require_unlock"
        app:iconSpaceReserved="false" />

    <SeekBarPreference
        android:defaultValue="0"
        android:key="require_unlock_delay"
        android:max="30"
        android:progress="0"
        android:summary=""
        android:title="@string/settings_privacy_require_unlock_delay"
        app:iconSpaceReserved="false"
        app:showSeekBarValue="true" />

    <rikka.material.preference.MaterialSwitchPreference
        android:defaultValue="false"
        android:key="enable_secure"
        android:title="@string/settings_privacy_secure"
        app:iconSpaceReserved="false"
        app:summaryOff="@string/settings_privacy_secure_summary"
        app:summaryOn="@string/settings_privacy_secure_summary" />
</PreferenceScreen>
