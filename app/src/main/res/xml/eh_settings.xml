<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hippo.ehviewer.preference.AccountPreference
        android:key="account"
        android:summary="@string/settings_eh_identity_cookies_tourist"
        android:title="@string/account_name"
        app:iconSpaceReserved="false" />

    <rikka.preference.SimpleMenuPreference
        android:defaultValue="1"
        android:key="gallery_site"
        android:summary="%s"
        android:title="@string/settings_eh_gallery_site"
        app:entries="@array/gallery_site_entries"
        app:entryValues="@array/gallery_site_entry_values"
        app:iconSpaceReserved="false" />

    <com.hippo.ehviewer.preference.SignInRequiredPreference
        android:key="com.hippo.ehviewer.ui.fragment.UConfigFragment"
        android:summary="@string/settings_u_config_summary"
        android:title="@string/settings_u_config"
        app:iconSpaceReserved="false" />

    <com.hippo.ehviewer.preference.SignInRequiredPreference
        android:key="com.hippo.ehviewer.ui.fragment.MyTagsFragment"
        android:summary="@string/settings_my_tags_summary"
        android:title="@string/settings_my_tags"
        app:iconSpaceReserved="false" />

    <rikka.preference.SimpleMenuPreference
        android:defaultValue="-1"
        android:entries="@array/night_mode_entries"
        android:entryValues="@array/night_mode_values"
        android:key="theme"
        android:summary="%s"
        android:title="@string/dark_theme"
        app:iconSpaceReserved="false" />

    <rikka.material.preference.MaterialSwitchPreference
        android:key="black_dark_theme"
        android:title="@string/black_dark_theme"
        app:iconSpaceReserved="false" />

    <rikka.preference.SimpleMenuPreference
        android:defaultValue="0"
        android:key="launch_page"
        android:summary="%s"
        android:title="@string/settings_eh_launch_page"
        app:entries="@array/launch_page_entries"
        app:entryValues="@array/launch_page_entry_values"
        app:iconSpaceReserved="false" />

    <rikka.preference.SimpleMenuPreference
        android:defaultValue="0"
        android:key="list_mode"
        android:summary="%s"
        android:title="@string/settings_eh_list_mode"
        app:entries="@array/list_mode_entries"
        app:entryValues="@array/list_mode_entry_values"
        app:iconSpaceReserved="false" />

    <SeekBarPreference
        android:defaultValue="40"
        android:key="list_tile_size"
        android:title="@string/list_tile_thumb_size"
        android:max="60"
        app:iconSpaceReserved="false"
        app:min="20"
        app:showSeekBarValue="true" />

    <rikka.preference.SimpleMenuPreference
        android:defaultValue="0"
        android:key="detail_size"
        android:summary="%s"
        android:title="@string/settings_eh_detail_size"
        app:entries="@array/detail_size_entries"
        app:entryValues="@array/detail_size_entry_values"
        app:iconSpaceReserved="false" />

    <rikka.preference.SimpleMenuPreference
        android:defaultValue="1"
        android:key="thumb_size"
        android:summary="%s"
        android:title="@string/settings_eh_thumb_size"
        app:entries="@array/thumb_size_entries"
        app:entryValues="@array/thumb_size_entry_values"
        app:iconSpaceReserved="false" />

    <rikka.preference.SimpleMenuPreference
        android:defaultValue="0"
        android:key="thumb_resolution"
        android:summary="@string/settings_eh_thumb_resolution_summary"
        android:title="@string/settings_eh_thumb_resolution"
        app:entries="@array/thumb_resolution_entries"
        app:entryValues="@array/thumb_resolution_entry_values"
        app:iconSpaceReserved="false" />

    <rikka.material.preference.MaterialSwitchPreference
        android:defaultValue="false"
        android:key="show_jpn_title"
        android:summary="@string/settings_eh_show_jpn_title_summary"
        android:title="@string/settings_eh_show_jpn_title"
        app:iconSpaceReserved="false" />

    <rikka.material.preference.MaterialSwitchPreference
        android:defaultValue="false"
        android:key="show_gallery_pages"
        android:summary="@string/settings_eh_show_gallery_pages_summary"
        android:title="@string/settings_eh_show_gallery_pages"
        app:iconSpaceReserved="false" />

    <rikka.material.preference.MaterialSwitchPreference
        android:defaultValue="false"
        android:key="show_tag_translations"
        android:summary="@string/settings_eh_show_tag_translations_summary"
        android:title="@string/settings_eh_show_tag_translations"
        app:iconSpaceReserved="false" />

    <com.hippo.preference.UrlPreference
        android:key="tag_translations_source"
        android:title="@string/settings_eh_tag_translations_source"
        app:iconSpaceReserved="false"
        app:url="@string/settings_eh_tag_translations_source_url" />

    <Preference
        android:key="com.hippo.ehviewer.ui.fragment.FilterFragment"
        android:summary="@string/settings_eh_filter_summary"
        android:title="@string/settings_eh_filter"
        app:iconSpaceReserved="false" />

    <rikka.material.preference.MaterialSwitchPreference
        android:defaultValue="false"
        android:key="cellular_network_warning"
        android:title="@string/settings_eh_metered_network_warning"
        app:iconSpaceReserved="false" />

    <rikka.material.preference.MaterialSwitchPreference
        android:defaultValue="true"
        android:key="request_news"
        android:title="@string/settings_request_news_title"
        app:iconSpaceReserved="false" />

</PreferenceScreen>
